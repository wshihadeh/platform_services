version: '3.7'

networks:
  <%= NETWORK %>:
    external: true

services:

  mysql:
    image: ${MYSQL_DOCKER_IMAGE}:${MYSQL_DOCKER_IMAGE_TAG}
    volumes:
      - ${MYSQL_VOLUME}:/var/lib/mysql
    environment:
      - MYSQL_ROOT_PASSWORD=dummy
    deploy:
      replicas: 1
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 10
      update_config:
        failure_action: rollback
        parallelism: 1
        delay: 10s
        order: start-first
      rollback_config:
        parallelism: 0
        order: stop-first
    logging:
      driver: 'json-file'
      options:
        "max-size": "10m"
        "max-file": "5"
    networks:
      - <%= NETWORK %>
